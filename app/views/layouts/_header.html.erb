<header id = 'page-header'>
  <h1>Biblioteca</h1>
  <nav>
    <p>
      <% if current_user %>
      <%= link_to current_user.name, current_user %>
      <%= link_to 'Sair', session_path, method: :delete, class: 'button' %>
      <% else %>
      <%= link_to 'Cadastrar', signup_path, class: 'button' %>
      <%= link_to 'Entrar', new_session_path, class: 'button' %>
      <% end %>
    </p>
  </nav>
</header>
